//print no from ``1 to 5

for(let i = 1 ; i <= 5 ; i++){
console.log(i);
}

//print all odd nos from 1 to 15 

for(let i = 1 ; i <= 15 ; i= i+2){
 console.log(i)
}

//print multiplication of 5 

for(let i = 1 ; i <= 5 ; i++){
console.log(5*i);
}

