                                            // favourite Anime guess game 

let movie = "Demon slayer" ;

let n = prompt("GUESS MY FAVOURITE MOVIE");

while( (movie != n ) && ( n != "quit" )){
console.log("wrong guess buddy ");
n = prompt("again guess my fav movie");
}

if(movie == n ){
 console.log("right guessed ");
}
